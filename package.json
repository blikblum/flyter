{
  "name": "flyter",
  "version": "1.0.1",
  "description": "An inline editing library",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ovesco/flyter.git"
  },
  "keywords": [
    "inline",
    "editing",
    "popup",
    "editable"
  ],
  "author": "ovesco",
  "license": "Apache-2.0",
  "dependencies": {
    "deepmerge": "^4.2.2",
    "dompurify": "^2.2.0"
  },
  "devDependencies": {
    "@types/deepmerge": "^2.2.0",
    "@types/dompurify": "^2.0.4",
    "parallel-webpack": "^2.6.0",
    "shx": "^0.3.3",
    "ts-loader": "^8.0.7",
    "typescript": "^4.0.5",
    "webpack": "^5.3.2",
    "webpack-cli": "^4.1.0"
  },
  "peerDependencies": {
    "@popperjs/core": "^2.5.3"
  },
  "scripts": {
    "start": "parcel index.html",
    "clean": "shx rm -rf bundles lib lib-esm",
    "build:bundles": "parallel-webpack",
    "build:lib": "tsc && tsc -m es6 --outDir lib-esm",
    "build": "npm run clean && npm run build:bundles && npm run build:lib"
  }
}