{
  "name": "flyter",
  "version": "0.3.1",
  "description": "An inline editing library",
  "source": "src/index.ts",
  "main": "dist-commonjs/main.js",
  "module": "dist-esm/module.js",
  "types": "dist-esm/main.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ovesco/flyter.git"
  },
  "keywords": [
    "inline",
    "editing",
    "popup",
    "editable"
  ],
  "author": "ovesco",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "shx rm -rf bundles .parcel-cache dist-commonjs dist-esm",
    "build": "npm run clean && parcel build",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "deepmerge": "^4.3.1"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.12.0",
    "@parcel/transformer-typescript-types": "^2.12.0",
    "parcel": "^2.12.0",
    "typescript": "^5.5.2",
    "vitepress": "^1.2.3"
  },
  "targets": {
    "main": {
      "isLibrary": true,
      "distDir": "dist-commonjs"
    },
    "module": {
      "isLibrary": true,
      "distDir": "dist-esm"
    },
    "vanilla": {
      "source": "src/build/flyter.vanilla.min.ts",
      "outputFormat": "global",
      "context": "browser",
      "distDir": "bundles"
    },
    "popper": {
      "source": "src/build/flyter.popper.min.ts",
      "outputFormat": "global",
      "context": "browser",
      "distDir": "bundles"
    },
    "bootstrap": {
      "source": "src/build/flyter.bootstrap.min.ts",
      "outputFormat": "global",
      "context": "browser",
      "distDir": "bundles"
    },
    "popper-bootstrap": {
      "source": "src/build/flyter.popper-bootstrap.min.ts",
      "outputFormat": "global",
      "context": "browser",
      "distDir": "bundles"
    }
  }
}
