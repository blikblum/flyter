{
  "compilerOptions": {
      "lib": ["dom", "ES2017"],
      "esModuleInterop": true,
      "module": "ESNext",
      "target": "ES5",
      "strictPropertyInitialization": false,
      "strict": true,
      "rootDir": "src",
      "noUnusedParameters": true,
      "moduleResolution": "node",
      "sourceMap": true
  },
  "exclude": [
      "dist",
      "node_modules",
      "src/build",
      "docs",
  ]
}